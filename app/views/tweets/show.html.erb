<%- model_class = Tweet -%>
<div class="page-header">
  <h4>Tweet from <%= link_to @tweet.from_user, twitter_user_page(@tweet.from_user) %> matching <%= "#{@tweet.term.type} '#{@tweet.term.text}'" %><small class="pull-right" style="padding-top:3px;"><i class='icon-refresh'></i> <%= link_to "Refresh results", refresh_term_results_path(@tweet.id) %></small></h4>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tweet_id) %>:</strong></dt>
  <dd><%= @tweet.tweet_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from_user) %>:</strong></dt>
  <dd><%= @tweet.from_user %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @tweet.text %></dd>
</dl>
