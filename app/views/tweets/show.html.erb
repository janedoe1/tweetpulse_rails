<%- model_class = Tweet -%>
  <legend>Tweet from <%= link_to @tweet.from_user, twitter_user_page(@tweet.from_user) %> matching <%= "#{@tweet.term.type} '#{@tweet.term.text}'" %></legend>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tweet_id) %>:</strong></dt>
  <dd><%= @tweet.tweet_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from_user) %>:</strong></dt>
  <dd><%= @tweet.from_user %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @tweet.text %></dd>
</dl>
