<style>
td {
  font-size:11px;
}
</style>

<div style="width:95%; margin:0 auto; font-size:.8em;">
<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Followers</th>
      <th>Following</th>
      <th>Influence</th>
      <th>Outreach</th>
    </tr>
  </thead>
  <tbody>
    <% @presenter.top_users.each do |twitter_user| %>
      <tr>
        <td><%= link_to twitter_user.handle, twitter_user_page(twitter_user.handle), :target => '_blank' %></td>
        <td><%= number_with_delimiter(twitter_user.follower_count) rescue 0 %></td>
        <td><%= number_with_delimiter(twitter_user.friend_count) rescue 0 %></td>
        <td><%= number_with_delimiter(twitter_user.influence) rescue 0 %></td>
        <td><%= number_with_delimiter(twitter_user.outreach) rescue 0 %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>