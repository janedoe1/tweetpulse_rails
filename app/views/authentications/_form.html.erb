<%= simple_form_for @authentication, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :user_id %>
  <%= f.input :provider %>
  <%= f.input :uid %>
  <%= f.input :token %>
  <%= f.input :secret %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                authentications_path, :class => 'btn' %>
  </div>
<% end %>
